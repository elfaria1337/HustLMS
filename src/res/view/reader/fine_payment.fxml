<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="controller.reader.FinePaymentController" spacing="10" prefWidth="700">

    <padding>
        <Insets top="10" right="10" bottom="10" left="10"/>
    </padding>

    <Label text="Thông tin phạt &amp; Thanh toán" style="-fx-font-weight: bold; -fx-font-size: 16px;" />

    <TableView fx:id="fineTable" prefHeight="250">
        <columns>
            <TableColumn fx:id="colFineId" text="Mã phạt" prefWidth="80"/>
            <TableColumn fx:id="colReason" text="Lý do" prefWidth="300"/>
            <TableColumn fx:id="colAmount" text="Số tiền (VNĐ)" prefWidth="120"/>
            <TableColumn fx:id="colIssueDate" text="Ngày phát hành" prefWidth="120"/>
        </columns>
    </TableView>

    <Label text="Hóa đơn liên quan" style="-fx-font-weight: bold; -fx-font-size: 14px;" />

    <TableView fx:id="invoiceTable" prefHeight="150">
        <columns>
            <TableColumn fx:id="colInvoiceId" text="Mã hóa đơn" prefWidth="100"/>
            <TableColumn fx:id="colPaymentMethod" text="Phương thức thanh toán" prefWidth="180"/>
            <TableColumn fx:id="colPaymentDate" text="Ngày thanh toán" prefWidth="150"/>
            <TableColumn fx:id="colAmountPaid" text="Số tiền (VNĐ)" prefWidth="120"/>
        </columns>
    </TableView>

    <HBox spacing="10" alignment="CENTER_RIGHT">
        <Button text="Thanh toán phạt" onAction="#handlePayFine"/>
        <Button text="Đóng" onAction="#handleClose"/>
    </HBox>

</VBox>
