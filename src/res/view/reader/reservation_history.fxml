<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="controller.reader.ReservationHistoryController" spacing="10">

    <padding>
        <Insets top="10" right="10" bottom="10" left="10"/>
    </padding>

    <Label text="Lịch sử đặt trước" style="-fx-font-weight: bold; -fx-font-size: 16px;" />

    <TableView fx:id="reservationTable" prefHeight="300" prefWidth="600">
        <columns>
            <TableColumn fx:id="colReservationId" text="Mã đặt trước" prefWidth="100"/>
            <TableColumn fx:id="colReservationDate" text="Ngày đặt" prefWidth="150"/>
            <TableColumn fx:id="colStatus" text="Trạng thái" prefWidth="100"/>
            <TableColumn fx:id="colTitleName" text="Tên đầu sách" prefWidth="250"/>
        </columns>
    </TableView>

    <HBox alignment="CENTER_RIGHT">
        <Button text="Đóng" onAction="#handleClose"/>
    </HBox>

</VBox>
