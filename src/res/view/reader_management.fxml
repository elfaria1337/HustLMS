<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Pagination?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox spacing="10" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.ReaderController">

    <padding>
        <Insets bottom="10" left="10" right="10" top="10" />
    </padding>

    <HBox spacing="5">
        <TextField fx:id="searchField" prefHeight="26.0" prefWidth="250.0" promptText="Tìm kiếm theo tên hoặc số điện thoại..." />
        <Button onAction="#handleAdd" text="Thêm mới" />
        <Button onAction="#handleEdit" text="Sửa" />
        <Button onAction="#handleToggleStatus" text="Khóa/Mở tài khoản" />
    </HBox>

    <TableView fx:id="readerTable" prefHeight="400" prefWidth="700">
        <columns>
            <TableColumn fx:id="colId" prefWidth="50" text="ID" />
            <TableColumn fx:id="colFullName" prefWidth="120" text="Họ tên" />
            <TableColumn fx:id="colBirthDate" prefWidth="100" text="Ngày sinh" />
            <TableColumn fx:id="colAddress" prefWidth="110" text="Địa chỉ" />
            <TableColumn fx:id="colPhone" prefWidth="90" text="SĐT" />
            <TableColumn fx:id="colEmail" prefWidth="150" text="Email" />
            <TableColumn fx:id="colStatus" prefWidth="85" text="Trạng thái" />
        </columns>
    </TableView>

    <Pagination fx:id="pagination" pageCount="1" maxPageIndicatorCount="10" />

    <TabPane>
        <Tab text="Lịch sử mượn">
            <TableView fx:id="loanHistoryTable" prefHeight="150" prefWidth="700">
                <columns>
                    <TableColumn fx:id="colLoanId" prefWidth="100" text="Mã phiếu mượn" />
                    <TableColumn fx:id="colLoanDate" prefWidth="150" text="Ngày mượn" />
                    <TableColumn fx:id="colDueDate" prefWidth="150" text="Ngày trả hạn" />
                </columns>
            </TableView>
        </Tab>
        <Tab text="Lịch sử vi phạm">
            <TableView fx:id="fineHistoryTable" prefHeight="150" prefWidth="700">
                <columns>
                    <TableColumn fx:id="colFineId" prefWidth="100" text="Mã vi phạm" />
                    <TableColumn fx:id="colFineDate" prefWidth="150" text="Ngày vi phạm" />
                    <TableColumn fx:id="colFineReason" prefWidth="200" text="Lý do" />
                </columns>
            </TableView>
        </Tab>
        <Tab text="Lịch sử thanh toán">
            <TableView fx:id="invoiceHistoryTable" prefHeight="150" prefWidth="700">
                <columns>
                    <TableColumn fx:id="colInvoiceId" prefWidth="100" text="Mã thanh toán" />
                    <TableColumn fx:id="colInvoiceDate" prefWidth="150" text="Ngày thanh toán" />
                    <TableColumn fx:id="colInvoiceAmount" prefWidth="150" text="Số tiền" />
                </columns>
            </TableView>
        </Tab>
    </TabPane>

</VBox>
