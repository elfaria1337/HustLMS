<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox spacing="10" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.ReaderController">

    <padding>
        <Insets bottom="10" left="10" right="10" top="10" />
    </padding>

    <!-- Thanh tìm kiếm -->
    <HBox spacing="5">
        <TextField fx:id="searchField" prefHeight="26.0" prefWidth="222.0" promptText="Tìm kiếm theo tên hoặc số điện thoại..." />
        <Button onAction="#handleAdd" text="Thêm mới" />
        <Button onAction="#handleEdit" text="Sửa" />
        <Button onAction="#handleToggleStatus" text="Khóa/Mở tài khoản" />
    </HBox>

    <!-- Bảng danh sách độc giả -->
    <TableView fx:id="readerTable" prefHeight="400" prefWidth="700">
        <columns>
            <TableColumn fx:id="colId" prefWidth="55.200010657310486" text="ID" />
            <TableColumn fx:id="colFullName" prefWidth="127.20001983642578" text="Họ tên" />
            <TableColumn fx:id="colBirthDate" prefWidth="67.20001220703125" text="Ngày sinh" />
            <TableColumn fx:id="colAddress" prefWidth="174.39996337890625" text="Địa chỉ" />
            <TableColumn fx:id="colPhone" prefWidth="73.60003662109375" text="SĐT" />
            <TableColumn fx:id="colEmail" prefWidth="203.19998168945312" text="Email" />
        </columns>
    </TableView>

    <!-- Tab Pane hiển thị chi tiết lịch sử -->
    <TabPane>
        <Tab text="Lịch sử mượn">
            <TableView fx:id="loanHistoryTable" prefHeight="150" />
        </Tab>
        <Tab text="Lịch sử vi phạm">
            <TableView fx:id="fineHistoryTable" prefHeight="150" />
        </Tab>
        <Tab text="Lịch sử thanh toán">
            <TableView fx:id="invoiceHistoryTable" prefHeight="150" />
        </Tab>
    </TabPane>

</VBox>
