<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="controller.LoginController" spacing="10" alignment="CENTER"
      style="-fx-padding: 20;">

    <Label text="Đăng nhập" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

    <TextField fx:id="txtUsername" promptText="Tên đăng nhập" maxWidth="200"/>
    <PasswordField fx:id="txtPassword" promptText="Mật khẩu" maxWidth="200"/>

    <Button text="Đăng nhập" onAction="#handleLogin" maxWidth="200"/>

    <Label fx:id="lblMessage" style="-fx-text-fill: red;"/>

</VBox>
