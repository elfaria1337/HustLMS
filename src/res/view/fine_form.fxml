<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="controller.FineFormController" spacing="10">

    <padding>
        <Insets top="10" right="10" bottom="10" left="10"/>
    </padding>

    <Label text="Thông tin Phạt" style="-fx-font-weight: bold; -fx-font-size: 16px;"/>

<GridPane hgap="10" vgap="10">

        <Label text="Lý do:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <TextField fx:id="reasonField" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

        <Label text="Số tiền:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <TextField fx:id="amountField" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

        <Label text="Ngày phạt:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
        <DatePicker fx:id="issueDatePicker" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

        <Label text="Mã độc giả:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
        <TextField fx:id="readerIdField" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

        <Label fx:id="readerIdErrorLabel" text="Mã độc giả không tồn tại" GridPane.rowIndex="4" GridPane.columnIndex="1" style="-fx-text-fill: red;" visible="false"/>

    </GridPane>

    <HBox spacing="10" alignment="center_right">
        <Button text="Lưu" onAction="#handleSave"/>
        <Button text="Hủy" onAction="#handleCancel"/>
    </HBox>

</VBox>
