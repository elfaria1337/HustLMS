<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="controller.BookTitleFormController" spacing="10">
    <padding>
        <Insets top="10" right="10" bottom="10" left="10"/>
    </padding>

    <Label text="Thông tin đầu sách" style="-fx-font-weight: bold; -fx-font-size: 16px;"/>

    <GridPane hgap="10" vgap="10">

        <Label text="Tên sách:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <TextField fx:id="titleNameField" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

        <Label text="Tác giả:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <TextField fx:id="authorField" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

        <Label text="Thể loại:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
        <TextField fx:id="genreField" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

        <Label text="Nhà xuất bản:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
        <TextField fx:id="publisherField" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

        <Label text="Năm xuất bản:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
        <TextField fx:id="publishYearField" GridPane.rowIndex="4" GridPane.columnIndex="1"/>

    </GridPane>

    <HBox spacing="10" alignment="center_right">
        <Button text="Lưu" onAction="#handleSave"/>
        <Button text="Hủy" onAction="#handleCancel"/>
    </HBox>

</VBox>
