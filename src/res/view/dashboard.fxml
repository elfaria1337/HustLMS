<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="controller.DashboardController">

    <!-- Thanh bên trái menu -->
    <left>
        <VBox spacing="10" style="-fx-background-color: #2f4f4f; -fx-padding: 10;">
            <Label text="Menu" style="-fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 16px;"/>
            <Button fx:id="btnReaderManagement" text="Quản lý độc giả" maxWidth="Infinity"/>
            <Button fx:id="btnBookManagement" text="Quản lý sách và kho" maxWidth="Infinity"/>
            <Button fx:id="btnBookImportManagement" text="Quản lý nhập sách mới" maxWidth="Infinity"/>
            <Button fx:id="btnLoanManagement" text="Quản lý mượn - trả sách" maxWidth="Infinity"/>
            <Button fx:id="btnFineInvoiceManagement" text="Quản lý phạt và thanh toán" maxWidth="Infinity"/>
        </VBox>
    </left>

    <!-- Phần nội dung chính -->
    <center>
        <VBox spacing="10" style="-fx-padding: 15;" alignment="TOP_CENTER">
            <Label fx:id="lblWelcome" text="Xin chào bạn!" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
            <StackPane fx:id="contentPane" style="-fx-background-color: white;">
                <Label fx:id="defaultDashboardLabel" text="Chào mừng đến Dashboard!" style="-fx-font-size: 24px;"/>
            </StackPane>
        </VBox>
    </center>

</BorderPane>
