<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="controller.InvoiceFormController" spacing="10">

    <padding>
        <Insets top="10" right="10" bottom="10" left="10"/>
    </padding>

    <Label text="Thông tin Hóa đơn" style="-fx-font-weight: bold; -fx-font-size: 16px;"/>

    <GridPane hgap="10" vgap="10">

        <Label text="Số tiền:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <TextField fx:id="amountField" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

        <Label text="Phương thức thanh toán:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <TextField fx:id="paymentMethodField" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

        <Label text="Ngày thanh toán:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
        <DatePicker fx:id="paymentDatePicker" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

        <Label text="Số điện thoại độc giả:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
        <TextField fx:id="phoneField" GridPane.rowIndex="3" GridPane.columnIndex="1"/>
        <Label fx:id="phoneErrorLabel" text="Số điện thoại không tồn tại" GridPane.rowIndex="4" GridPane.columnIndex="1" style="-fx-text-fill: red;" visible="false"/>

        <Label text="Mã phạt (nếu có):" GridPane.rowIndex="5" GridPane.columnIndex="0"/>
        <TextField fx:id="fineIdField" GridPane.rowIndex="5" GridPane.columnIndex="1"/>
        <Label fx:id="fineIdErrorLabel" text="Mã phạt không tồn tại" GridPane.rowIndex="6" GridPane.columnIndex="1" style="-fx-text-fill: red;" visible="false"/>

    </GridPane>

    <HBox spacing="10" alignment="center_right">
        <Button text="Lưu" onAction="#handleSave"/>
        <Button text="Hủy" onAction="#handleCancel"/>
    </HBox>

</VBox>
