<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="controller.FineInvoiceManagementController" spacing="10">

    <padding>
        <Insets top="10" right="10" bottom="10" left="10"/>
    </padding>

    <TabPane>

        <Tab text="Phạt">
            <VBox spacing="5">
                <HBox spacing="5">
                    <Button text="Thêm" onAction="#handleAddFine"/>
                    <Button text="Sửa" onAction="#handleEditFine"/>
                    <Button text="Xóa" onAction="#handleDeleteFine"/>
                </HBox>
                <TableView fx:id="fineTable" prefHeight="300">
                    <columns>
                        <TableColumn fx:id="colFineId" text="ID" prefWidth="50"/>
                        <TableColumn fx:id="colReason" text="Lý do" prefWidth="300"/>
                        <TableColumn fx:id="colAmount" text="Số tiền" prefWidth="100"/>
                        <TableColumn fx:id="colIssueDate" text="Ngày phạt" prefWidth="150"/>
                        <TableColumn fx:id="colReaderIdFine" text="ID độc giả" prefWidth="100"/>
                    </columns>
                </TableView>
            </VBox>
        </Tab>

        <Tab text="Hóa đơn">
            <VBox spacing="5">
                <HBox spacing="5">
                    <Button text="Thêm" onAction="#handleAddInvoice"/>
                    <Button text="Sửa" onAction="#handleEditInvoice"/>
                    <Button text="Xóa" onAction="#handleDeleteInvoice"/>
                </HBox>
                <TableView fx:id="invoiceTable" prefHeight="300">
                    <columns>
                        <TableColumn fx:id="colInvoiceId" text="ID" prefWidth="50"/>
                        <TableColumn fx:id="colAmountInvoice" text="Số tiền" prefWidth="100"/>
                        <TableColumn fx:id="colPaymentMethod" text="Phương thức" prefWidth="150"/>
                        <TableColumn fx:id="colPaymentDate" text="Ngày thanh toán" prefWidth="150"/>
                        <TableColumn fx:id="colReaderIdInvoice" text="ID độc giả" prefWidth="100"/>
                        <TableColumn fx:id="colFineIdInvoice" text="ID phạt" prefWidth="100"/>
                    </columns>
                </TableView>
            </VBox>
        </Tab>

    </TabPane>

</VBox>
