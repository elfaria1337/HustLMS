<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="controller.BookImportFormController" spacing="10">
    <padding>
        <Insets top="10" right="10" bottom="10" left="10"/>
    </padding>

    <Label text="Thông tin Phiếu nhập sách" style="-fx-font-weight: bold; -fx-font-size: 16px;"/>

    <GridPane hgap="10" vgap="10">

        <Label text="Ngày đặt:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <DatePicker fx:id="orderDatePicker" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

        <Label text="Ngày nhận:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <DatePicker fx:id="receiveDatePicker" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

        <Label text="Nhà cung cấp:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
        <ComboBox fx:id="supplierComboBox" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

    </GridPane>

    <HBox spacing="10" alignment="center_right">
        <Button text="Lưu" onAction="#handleSave"/>
        <Button text="Hủy" onAction="#handleCancel"/>
    </HBox>
</VBox>
