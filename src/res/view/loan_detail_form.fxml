<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="controller.LoanDetailFormController" spacing="10">

    <padding>
        <Insets top="10" right="10" bottom="10" left="10"/>
    </padding>

    <Label text="Thông tin chi tiết mượn sách" style="-fx-font-weight: bold; -fx-font-size: 16px;"/>

    <GridPane hgap="10" vgap="10">

        <Label text="Mã phiếu mượn:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <TextField fx:id="loanIdField" GridPane.rowIndex="0" GridPane.columnIndex="1"/>
        <Label fx:id="loanIdErrorLabel" text="Mã phiếu mượn không tồn tại!" style="-fx-text-fill: red;" GridPane.rowIndex="1" GridPane.columnIndex="1" visible="false"/>

        <Label text="Mã bản sao sách:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
        <TextField fx:id="copyIdField" GridPane.rowIndex="2" GridPane.columnIndex="1"/>
        <Label fx:id="copyIdErrorLabel" text="Mã bản sao sách không tồn tại!" style="-fx-text-fill: red;" GridPane.rowIndex="3" GridPane.columnIndex="1" visible="false"/>

        <Label text="Ngày trả:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
        <DatePicker fx:id="returnDatePicker" GridPane.rowIndex="4" GridPane.columnIndex="1"/>

    </GridPane>

    <HBox spacing="10" alignment="center_right">
        <Button text="Lưu" onAction="#handleSave"/>
        <Button text="Hủy" onAction="#handleCancel"/>
    </HBox>

</VBox>
