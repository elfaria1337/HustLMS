<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox prefHeight="381.0" prefWidth="735.0" spacing="10" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.BookImportManagementController">

    <padding>
        <Insets bottom="10" left="10" right="10" top="10" />
    </padding>

    <TabPane>

        <!-- Tab Nhà cung cấp -->
        <Tab text="Nhà cung cấp">
            <VBox spacing="5">
                <HBox spacing="5">
                    <TextField fx:id="searchSupplierField" prefHeight="26.0" prefWidth="220.0" promptText="Nhập tên công ty hoặc người liên hệ..." />
                    <Button onAction="#handleAddSupplier" text="Thêm" />
                    <Button onAction="#handleEditSupplier" text="Sửa" />
                    <Button onAction="#handleDeleteSupplier" text="Xóa" />
                </HBox>
                <TableView fx:id="supplierTable" prefHeight="300">
                    <columns>
                        <TableColumn fx:id="colSupplierId" prefWidth="50" text="ID" />
                        <TableColumn fx:id="colCompanyName" prefWidth="128.8" text="Tên công ty" />
                        <TableColumn fx:id="colPhone" prefWidth="126.4" text="Điện thoại" />
                        <TableColumn fx:id="colEmail" prefWidth="136.8" text="Email" />
                        <TableColumn fx:id="colAddress" prefWidth="94.4" text="Địa chỉ" />
                        <TableColumn fx:id="colContactPerson" prefWidth="176.0" text="Người liên hệ" />
                    </columns>
                </TableView>
            </VBox>
        </Tab>

        <!-- Tab Phiếu nhập sách -->
        <Tab text="Phiếu nhập sách">
            <VBox spacing="5">
                <HBox spacing="5" alignment="CENTER_LEFT">
                    <Button onAction="#handleAddBookImport" text="Thêm" />
                    <Button onAction="#handleEditBookImport" text="Sửa" />
                    <Button onAction="#handleDeleteBookImport" text="Xóa" />

                    <Button fx:id="btnPrevBookImport" onAction="#handlePrevBookImport" text="Trang trước" />
                    <Label fx:id="lblPageBookImport" text="Trang 1/1" />
                    <Button fx:id="btnNextBookImport" onAction="#handleNextBookImport" text="Trang sau" />
                </HBox>
                <TableView fx:id="bookImportTable" prefHeight="300">
                    <columns>
                        <TableColumn fx:id="colImportId" prefWidth="50" text="ID" />
                        <TableColumn fx:id="colOrderDate" prefWidth="311.2" text="Ngày đặt" />
                        <TableColumn fx:id="colReceiveDate" prefWidth="328.8" text="Ngày nhận" />
                        <TableColumn fx:id="colSupplierName" prefWidth="281.6" text="Nhà cung cấp" />
                    </columns>
                </TableView>
            </VBox>
        </Tab>

        <!-- Tab Chi tiết nhập sách -->
        <Tab text="Chi tiết nhập sách">
            <VBox spacing="5">
                <HBox spacing="5" alignment="CENTER_LEFT">
                    <Button onAction="#handleAddBookImportDetail" text="Thêm" />
                    <Button onAction="#handleEditBookImportDetail" text="Sửa" />
                    <Button onAction="#handleDeleteBookImportDetail" text="Xóa" />

                    <Button fx:id="btnPrevBookImportDetail" onAction="#handlePrevBookImportDetail" text="Trang trước" />
                    <Label fx:id="lblPageBookImportDetail" text="Trang 1/1" />
                    <Button fx:id="btnNextBookImportDetail" onAction="#handleNextBookImportDetail" text="Trang sau" />
                </HBox>
                <TableView fx:id="bookImportDetailTable" prefHeight="300">
                    <columns>
                        <TableColumn fx:id="colImportDetailId" prefWidth="50" text="ID" />
                        <TableColumn fx:id="colQuantity" prefWidth="130.4" text="Số lượng" />
                        <TableColumn fx:id="colPricePerUnit" prefWidth="135.2" text="Giá/unit" />
                        <TableColumn fx:id="colTitleName" prefWidth="396.0" text="Tên sách" />
                        <TableColumn fx:id="colImportRef" prefWidth="261.6" text="Phiếu nhập" />
                    </columns>
                </TableView>
            </VBox>
        </Tab>

    </TabPane>
</VBox>
